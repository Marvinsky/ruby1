<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<ul class='thumbnails' id='posts'>

<ul>
  <% @posts.each do |post| %>
  	<div id='post'>
  		<li class='span3'>
  		<div class='thumbnail'>
    		<% if post.has_photo %>
      			<%= image_tag post.photo_path, :width => 400, :height => 300, :crop => :fill %>
    		<% end %>
    		<div class='caption'>
    			<h3> <%=  link_to post.titulo, post %> </h3>
    		</div>
    	</div>
	</div>
  <% end %>
</ul>

<br>

<%= link_to 'New Post', new_post_path %>